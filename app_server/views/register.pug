extends layout

block content 
    .container
        .row
            .col-12.col-md-6
                .card
                    form.col-12
                        .form-group 
                            label(for="userUsername")
                            input.form-control#userUsername(type = "text" placeholder = "Create username")
                        .form-group 
                            label(for="userEmail")
                            input.form-control#userEmail(type="email" aria-describedby="emailHelp" placeholder="Enter email")
                        .form-group
                            label(for="userPassword")
                            input.form-control#userPassword(type = "password" placeholder="Password")
                        button.btn.btn-primary(type="submit") #{title}
            .col-12.col-md-6
                h3 #{subtitle} 
                .card 
                    h2 #{message}
                    a(href=link.link) #{link.text}

                