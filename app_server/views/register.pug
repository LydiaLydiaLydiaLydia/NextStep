extends layout

block content 
    .container
        .row
            .col-12.col-md-6
                .card
                if (!user)
                    form(action = "../accounts/register" method = "post", role= "form").col-12
                        .form-group 
                            label(for="userUsername")
                            input.form-control#userUsername(type = "text" placeholder = "Username" name = "username")
                        .form-group 
                            label(for="userEmail")
                            input.form-control#userEmail(type="email" aria-describedby="emailHelp" placeholder="Enter email" name = "email")
                        .form-group
                            label(for="userPassword")
                            input.form-control#userPassword(type = "password" placeholder="Password" name = "password")
                        button.btn.btn-primary(type="submit") #{title}
                else 
                    p You are currently logged in
            .col-12.col-md-6
                h3 #{subtitle} 
                .card 
                    h2 #{message}
                    a(href=link.link) #{link.text}

                